<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtHeader"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/header"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp"
                    android:text="DADOS DO PEDIDO"
                    android:textColor="@color/header_text"
                    android:textSize="14dp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/flag"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.1"
                android:background="@color/header_text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_detalhe"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/txtPedido"
                    android:layout_marginLeft="65dp"
                    android:layout_marginStart="65dp"
                    android:text="Pedido"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txtPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@+id/textView1"
                    android:layout_toRightOf="@+id/textView1"

                    android:textSize="17dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_detalhe"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="31dp"
                    android:text="Fornecedor"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txtForn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_marginLeft="19dp"
                    android:layout_toRightOf="@+id/textView2"

                    android:textSize="17dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_detalhe"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="31dp"
                    android:text="Pagamento"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txtPagto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_marginLeft="19dp"
                    android:layout_toRightOf="@+id/textView3"

                    android:textSize="17dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_detalhe"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="53dp"
                    android:text="Emissao"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txtDtEmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView4"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/textView4"

                    android:textSize="17dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_detalhe"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:text="Necessidade"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txtNec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/textView5"

                    android:textSize="17dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_detalhe"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/txtSolic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/textView6"

                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtSolic"
                    android:layout_alignBottom="@+id/txtSolic"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="42dp"
                    android:text="Solicitante"
                    android:textSize="17dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_detalhe"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtCentroCusto"
                    android:layout_alignBottom="@+id/txtCentroCusto"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="24dp"
                    android:text="Centro Custo"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txtCentroCusto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/textView7"

                    android:textSize="17dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_detalhe"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/txtTotal"
                    android:layout_alignBottom="@+id/txtTotal"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="85dp"
                    android:text="Total"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/textView8"

                    android:textSize="17dp" />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/flagStatus123"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.1"
                android:background="@color/header_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtDtMod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/header"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Data da ultima modificacao:"
                        android:textColor="#6F7C7D"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtItens"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/header"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="ITENS DO PEDIDO"
                    android:textColor="@color/header_text"
                    android:textSize="15dp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/frm"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.1"
                android:background="@color/header_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <ListView
                    android:id="@+id/listViewItens"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="0dp"
                    android:scrollbarAlwaysDrawVerticalTrack="false"
                    android:scrollbars="none" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/flagStatus"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.1"
                android:background="@color/header_text" />

            <RelativeLayout
                android:id="@+id/frmMotivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="Motivo do Pedido:"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtMotivoPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/header_text" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>