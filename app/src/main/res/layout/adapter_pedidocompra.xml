<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnTipo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:id="@+id/viewMarcadorLateral"
        android:layout_width="5dp"
        android:orientation="vertical"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewNomeForn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewDtPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textViewTotalPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textViewDtPedido" />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/viewMarcadorRodape"
            android:layout_width="match_parent"
            android:layout_height="2dp"  />
    </LinearLayout>
</LinearLayout>