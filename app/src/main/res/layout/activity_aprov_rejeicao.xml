<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.gwaya.catupeia.AprovRejeicaoActivity" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Pedido 1 - Fornecedor A"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Motivo da Rejeição:"
            android:textSize="20dp"
            android:textColor="@color/line_background" />

    </TableRow>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relativeLayout1"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editTextMotivRej"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="40dp"
                android:gravity="top|left"
                android:inputType="textMultiLine" >

                <requestFocus />
            </EditText>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/actionbar_background" >

            <Button
                android:id="@+id/buttonConfirmar"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:text="Confirmar"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:background="@color/actionbar_background" />

            <Button
                android:id="@+id/buttonCancelaConf"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/buttonConfirmar"
                android:layout_alignBottom="@+id/buttonConfirmar"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:background="@color/actionbar_background"
                android:text="Cancelar"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </RelativeLayout>
    </RelativeLayout>

</TableLayout>