<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginRight="2dp"
            android:background="@color/rejeitado_forte"
            android:id="@+id/relativeLayoutRejeitar"
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rejeitar"
                android:gravity="center"
                android:padding="7dp"
                android:textColor="@color/actionbar_text"
                android:textSize="19sp"
                android:id="@+id/textViewRejeitar" />

            <View
                android:layout_below="@+id/textViewRejeitar"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/separador_laranja" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="2dp"
            android:background="@color/aprovado_forte"
            android:id="@+id/relativeLayoutAprovar"
            android:paddingTop="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aprovar"
                android:gravity="center"
                android:padding="7dp"
                android:textColor="@color/actionbar_text"
                android:textSize="19sp"
                android:id="@+id/textViewAprovar" />

            <View
                android:layout_below="@+id/textViewAprovar"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/separador_laranja" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>